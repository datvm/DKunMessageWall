<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.kunnie.dkunmessagewall.DKunMessageWall"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/btnAddNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Add number" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Help/About/Donate" />

    <ListView
        android:id="@+id/lstNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAbout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAddNumber" >

    </ListView>

</RelativeLayout>

